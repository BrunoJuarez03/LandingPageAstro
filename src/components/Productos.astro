---
import { products }  from '../../products.json';
---

<section>
    <h1>- NUESTROS PRODUCTOS - </h1>
    <p>Ofrecemos Tazas, parches, gorras, remeras, etc. Todo completamente personalizado!</p>
    <div>
        <ul>
            {
                products.map(({name, price, info, img}) =>{
                    return(<li>
                            <img src={img} alt=""/>
                            <article>
                                <header>
                                    <h3>{name}</h3>
                                    <p>{info}</p>
                                    
                                </header>
                                <footer>
                                    <h3>{price}</h3>
                                </footer>
                            </article>
                    </li>)
                })
            }
        </div>
    </article>
</section>

<style>
    section{
        margin-top: 100px;
        margin-bottom: 100px;
        padding: 10px;
        width: 100%;   
        text-align: center; 
        
    }

    div{
        width: 100%;
        
    }

    h1{
        font-size: 3rem;
    }

    p{
        font-size: 1.5rem;
    }

    ul{
        margin-top: 50px;
    }

    article{color: #FFF6E9;
        width: 70%;
        background: rgb(255,127,62);
        background: linear-gradient(13deg, rgba(255,127,62,1) 0%, rgba(96,76,195,1) 100%);
        
    }

    article header{
        text-align: left;
        padding: 10px;
        height: 70%;
    }

    article header h3{
        font-size: 2rem;
        color: #FFF6E9;
    }

    article header p{
        font-size: 1rem;
    }

    li{
        overflow: hidden;
        border-radius: 50px;
        width: 80%;
        min-height: 150px;
        height: 150px;
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        margin-inline: auto;
        background:
        radial-gradient(circle at 100% 50%, transparent 20%, rgba(255,255,255,.3) 21%, rgba(255,255,255,.3) 34%, transparent 35%, transparent),
        radial-gradient(circle at 0% 50%, transparent 20%, rgba(255,255,255,.3) 21%, rgba(255,255,255,.3) 34%, transparent 35%, transparent) 0 -50px;
        background-color: rgb(255,127,62);
        background-size:75px 100px;
        box-shadow: 10px 10px 0px 2px rgba(0, 0, 0, 0.75);
        transition: 0.3s;
    }

    li:hover{
        box-shadow: 5px 5px 0px 2px rgba(0, 0, 0, 0.75);
        transform: scale(1.1);
        transition: 0.3s;
    }

    li img{
        aspect-ratio: 1/1;
        object-fit: contain;
        width: 40%;
        height: 50%;
        min-height: 80px;
        margin: auto;
       }

    footer{
        text-align: left;
        padding: 20px;
    }

    @media screen and (max-width:900px) {
	
        article header h3{
        font-size: 1.5rem;
        color: #FFF6E9;
    }

    article header p{
        font-size: 1rem;
    }
	
	}

</style>