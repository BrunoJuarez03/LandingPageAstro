---
import {redes} from '../../products.json'
---

<footer>
    <article>
        <header>
            <h1>Nuestas Redes</h1>
            <ul>
                {
                    redes.map(({icon, url}) => {
                        return<li>
                            <img src={icon} alt=""/>
                            <a href={url}></a>
                        </li>
                    })
                }
            </ul>
        </header>
    </article>
</footer>

<style>
    footer{
        height: 200px;
        width: 100%;
        background-color: orangered;
    }
</style>